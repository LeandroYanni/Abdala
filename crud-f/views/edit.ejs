<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Crud MYSQL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  </head>
  <body>
    <% if (clientes) { %>
    <div class="container mt-4">     
        <div class="card border-secondary">  
            <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="/update" method="POST">
                    
                    <input name="id" id="id" value="<%= clientes.ID_CLIENTE %>" hidden>

                    <div class="mb-3">
                        <label for="user" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="<%= clientes.nombreCliente %>" tabindex="1">
                    </div>
                        
                    <div class="mb-3">
                        <label for="user" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="apellido" name="apellido" value="<%= clientes.apellidoCliente %>"tabindex="2">
                    </div>

                    <div class="mb-3">
                        <label for="user" class="form-label">Fecha de Nacimiento</label>
                        <input type="date" class="form-control" id="fecha_nac" name="fecha_nac" value="<%= clientes.fNacimientoCliente %>" tabindex="3">
                    </div>
                    
                    <div class="mb-3">
                        <label for="user" class="form-label">Peso</label>
                        <input type="text" class="form-control" id="peso" name="peso" value="<%= clientes.pesoCliente %>" tabindex="4">
                    </div>
                        
                    <div class="mb-3">
                        <label for="user" class="form-label">Altura</label>
                        <input type="text" class="form-control" id="altura" name="altura" value="<%= clientes.alturaCliente %>" tabindex="5">
                    </div>

                    <div class="mb-3">
                        <label for="user" class="form-label">Domicilio</label>
                        <input type="text" class="form-control" id="domicilio" name="domicilio" value="<%= clientes.domicilioCliente %>"tabindex="6">
                    </div>

                    <div class="mb-3">
                        <label for="user" class="form-label">CÃ³dgo Postal</label>
                        <input type="text" class="form-control" id="cod_postal" name="cod_postal" value="<%= clientes.codPostal %>" tabindex="7">
                    </div>
                        
                    <div class="mb-3">
                        <label for="user" class="form-label">Numero Movil 1</label>
                        <input type="text" class="form-control" id="num_m1" name="num_m1" value="<%= clientes.tel01 %>" tabindex="8">
                    </div>

                    <div class="mb-3">
                        <label for="user" class="form-label">Numero Movil 2</label>
                        <input type="text" class="form-control" id="num_m2" name="num_m2" value="<%= clientes.tel02 %>" tabindex="9">
                    </div>
                    
                    <div class="mb-3">
                        <label for="user" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" name="email" value="<%= clientes.emailCliente %>" tabindex="10">
                    </div>

                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>        
    </div>
    <% } %>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>